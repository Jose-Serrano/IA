// **RECUERDA** PRIORIDAD EN FUNCIÓN DEL ORDEN DE LAS REGLAS (LA SUPERIOR LA MÁS PRIORITARIA)
//5 minutos de un area a otra area adyacente

rule asignation{
	declarations
		practica.objetos.Tarea t1;
		practica.objetos.Trabajador w1;
		practica.objetos.Herramienta h1;
	preconditions
		t1.getUnidades() > 0;
		!t1.getState();
		t1.getTipo().equals(h1.getTrabajo());
	actions
		w1.setWork();
		t1.assignWorker(w1);
		w1.addWorkingArea(t1);
		t1.setTool(h1);
		modified(w1);
		modified(t1);
}
//Mejorando la asignacion existente
rule improveAsignation{
	declarations
		practica.objetos.Tarea t1;
		practica.objetos.Trabajador w1;
	preconditions
		t1.getState(); //Debe de tener alguien asignado
		t1.getWorker().getWorkingAbility(t1.getTipo()) < w1.getWorkingAbility(t1.getTipo());
		!t1.getWorker().getNombre().equals(w1.getNombre());
	actions
		t1.getWorker().deleteTarea(t1);
		t1.assignWorker(w1);
		w1.addWorkingArea(t1);
		modified(w1);
		modified(t1);
}


