rule asignation{
	declarations
		practica.objetos.Tarea t1;
		practica.objetos.Trabajador w1;
	preconditions
		t1.getUnidades() > 0;
		t1.getState().equalse(false);
		w1.getState().equalse(false);
	actions
		w1.setWork();
		t1.assignWorker();
		w1.setWorkingArea(t1.getArea());
		modified(w1);
		modified(t1);
}